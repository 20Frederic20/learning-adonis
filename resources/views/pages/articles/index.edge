          <th class="border border-slate-600">Id</th>
          <th class="border border-slate-600">Slug</th>
          <th class="border border-slate-600">Nom</th>
        </thead>
        <tbody>
          @each( value in categories)
          <tr>
            <td class="border border-slate-700"> {{ value.id }} </td>
            <td class="border border-slate-700"> {{ value.slug }} </td>
            <td class="border border-slate-700"> {{ value.name }} </td>
          </tr>
          @end
        </tbody>
      </table>
